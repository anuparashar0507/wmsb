!!!
%html
  %head
    %title Where's My School Bus
    %link{:href => 'https://fonts.googleapis.com/css?family=Enriqueta:400,700', :rel => 'stylesheet', :type => 'text/css'}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    %script{ src: "https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE_MAPS_KEY']}&sensor=false", type: 'text/javascript' }

  %body{ class: controller.controller_name }
    - if notice || alert
      .notifications
        = notice || alert
        %a.icon-cancel-circle{ href: 'javascript:void(0)' }
    = yield
    .footer
      .contact
        %h4 Boston Public Schools Transportation Department
        %p schoolbus@bostonpublicschools.org
        %p 617-635-9520
      .bps-logo
      .credit
        %p Built by
        %a{href: "http://www.vermonster.com/", target: "_blank"}
          .vermonster-logo
